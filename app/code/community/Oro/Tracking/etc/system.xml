<config>
    <sections>
        <oro translate="label" module="oro_tracking">
            <label>OroCRM API</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>600</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <tracking translate="label">
                    <label>Oro Tracking</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <site_identifier translate="label">
                            <label>Site Identifier</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </site_identifier>
                        <host translate="label">
                            <label>Service Host Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <comment>
                                <![CDATA[
                                    <b>Format</b>: http(s)://example.com/ <br/>
                                    <b>Warning</b>: Tracking script may not work properly on secure (https)
                                    pages if OroCRM is installed on a non-secure host.
                                ]]>
                            </comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </host>
                    </fields>
                </tracking>
            </groups>
        </oro>
    </sections>
</config>
